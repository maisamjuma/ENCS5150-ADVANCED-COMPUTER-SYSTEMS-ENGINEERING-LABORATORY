<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pepperoni"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PepperoniFragment">

    <!-- activity_pepperoni_fragment.xml -->
    <RelativeLayout
        android:id="@+id/pepperoniRootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="425dp"
                android:layout_height="154dp"
                android:background="@color/white"
                android:src="@drawable/pepp"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Pepperoni"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/heartButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="40dp"
                    android:background="@null"
                    android:onClick="onHeartButtonClick"
                    android:src="@drawable/pulse_animation" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/choiceRadioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radioSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="S    $22.0"
                            android:textColor="@android:color/holo_orange_dark"
                            android:textSize="20sp" />

                        <RadioButton
                            android:id="@+id/radioLarge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="L    $34.0"
                            android:textColor="@android:color/holo_orange_dark"
                            android:textSize="20sp" />

                    </RadioGroup>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Menu Details and nutrition"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="280dp"
                android:layout_height="1dp"
                android:layout_marginLeft="60dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="A classic favorite featuring savory pepperoni slices atop a bed of melted cheese and tangy tomato sauce. Indulge in the perfect blend of flavors with every bite."
                android:textColor="@color/black"
                android:textSize="17sp" />

            <Button
                android:id="@+id/custom"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/holo_orange_dark"
                android:text="Custom Your Order"
                android:textSize="15sp" />

            <Button
                android:id="@+id/submit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_orange_dark"
                android:text="Submit"
                android:textSize="15sp" />


        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>