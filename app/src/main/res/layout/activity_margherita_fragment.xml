<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/margherita"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MargheritaFragment">
    <!-- activity_pepperoni_fragment.xml -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/margheritaRootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="425dp"
            android:layout_height="154dp"
            android:background="@color/white"
            android:src="@drawable/mar"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Margherita" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/heartButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:background="@null"
                android:onClick="onHeartButtonClick"
                android:src="@drawable/pulse_animation" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="140dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="20dp"
                    android:text="S    $23.0" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:textSize="20dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Menu Details and nutrition" />
        <View
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="7dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="A classic favorite featuring savory pepperoni slices atop a bed of melted cheese and tangy tomato sauce. Indulge in the perfect blend of flavors with every bite." />

        <Button
            android:id="@+id/custom"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:textSize="15sp"
            android:background="@android:color/holo_orange_dark"
            android:text="Custom Your Order" />

        <Button
            android:id="@+id/submit"
            android:layout_width="200dp"
            android:textSize="15sp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:text="Submit" />


    </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
