<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AdminProfile.AdminProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="-54dp">


        <TextView
            android:id="@+id/profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="24dp"
            android:text="Admin Profile"
            android:textSize="24sp" />


        <ImageButton
            android:id="@+id/change_photo"
            android:layout_width="16dp"
            android:layout_height="108dp"
            android:layout_alignLeft="@id/profile_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="218dp"
            android:layout_marginLeft="362dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="1dp"
            android:layout_toEndOf="@+id/profile_title" />

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewFname"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="First Name" />

            <EditText
                android:id="@+id/first_name"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_title"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Enter First name"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewLname"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Last Name" />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/l1"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Enter Last name"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewemail"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Email" />

            <EditText
                android:id="@+id/Email_admin"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/l2"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Enter new Email"
                android:inputType="textEmailAddress" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textviewpassword"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="password" />

            <EditText
                android:id="@+id/password"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/l3"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Enter new password"
                android:inputType="textPassword" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/l5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="320dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textviewpassword1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Password" />

            <EditText
                android:id="@+id/password_conff"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/l4"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Repeat password"
                android:inputType="textPassword" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/l6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textviewPhone"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="05"
                android:textColor="@color/black"
                android:textSize="20sp"

                />

            <EditText
                android:id="@+id/phone_number"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/l5"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Enter new Phone"
                android:inputType="phone" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/l7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="420dp"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/textviewGender"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gender"

                />

            <EditText
                android:id="@+id/Gender"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/l6"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Enter Gender" />
        </LinearLayout>


        <Button
            android:id="@+id/save_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/l7"
            android:layout_marginTop="50dp"
            android:background="@android:color/holo_orange_dark"
            android:text="Save Changes" />

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/save_button"
            android:layout_marginTop="20dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>